<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<% @tasks.each do |task| %>
<ul>
  <li><%= link_to task.name, task_path(task) %> <%= task.done %> <%= link_to "Edit", edit_task_path(task) %> <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" }%> </li>
</ul>
<% end %>

<%= link_to "Create new task", new_task_path %>
